<Page x:Class="LibraryDbSim.CreateAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryDbSim"
      mc:Ignorable="d" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      d:DesignHeight="450" d:DesignWidth="800"
   Title="Create Account" Height="460" Width="735">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <RowDefinition Height="230"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245"/>
            <ColumnDefinition Width="245"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label 
            x:Name="SignUpLbl" 
            Content="Enter Info" 
            Grid.Column="1" 
            FontSize="28" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="0, 0, 0, 10">
        </Label>

        <TextBox 
            x:Name="NameTxtBox" 
            MaxLength="20" 
            TextWrapping="NoWrap" 
            Grid.Row="1" 
            Grid.Column="1" 
            VerticalAlignment="Top" 
            Margin="15, 10, 15, 0"
            FontSize="14" 
            BorderThickness="1.5" 
            PreviewTextInput="LetterTextBox_PreviewTextInput" 
            DataObject.Pasting="LetterTextBox_Pasting"
            mah:TextBoxHelper.Watermark="Enter Name">
        </TextBox>

        <TextBox 
            x:Name="AgeTxtBox" 
            MaxLength="2" 
            TextWrapping="NoWrap" 
            Grid.Row="1" 
            Grid.Column="1" 
            VerticalAlignment="Top" 
            Margin="15, 50, 15, 0" 
            FontSize="14" 
            BorderThickness="1.5"
            PreviewTextInput="NumberTextBox_PreviewTextInput" 
            DataObject.Pasting="NumberTextBox_Pasting"
            mah:TextBoxHelper.Watermark="Enter Age">
        </TextBox>

        <TextBox 
            x:Name="EmailAccTxtBox" 
            MaxLength="30" 
            TextWrapping="NoWrap" 
            Grid.Row="1" 
            Grid.Column="1" 
            VerticalAlignment="Top" 
            Margin="15, 90, 15, 0" 
            FontSize="14" 
            BorderThickness="1.5"
            mah:TextBoxHelper.Watermark="Enter Email Address">
        </TextBox>

        <PasswordBox 
            x:Name="AccPasswordTxtBox" 
            MaxLength="50" 
            Grid.Column="1" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Margin="15, 130, 15, 0" 
            FontSize="14" 
            BorderThickness="1.5"
            mah:TextBoxHelper.Watermark="Enter Password">
        </PasswordBox>

        <Button 
            x:Name="SignUpBtn" 
            Content="Sign Up" 
            Grid.Column="1" 
            Grid.Row="2" 
            VerticalAlignment="Top" 
            Margin="70, 0, 70, 0" 
            FontSize="20" 
            VerticalContentAlignment="Center" 
            Click="SignUpBtn_Click"
            Style="{DynamicResource MahApps.Styles.Button.Square}">
        </Button>

        <Button
            Name="returnBtn"
            Content="Go Back"
            Style="{DynamicResource MahApps.Styles.Button.Square}"
            Click="ReturnBtn_Click"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="100">

        </Button>

        <Label 
            x:Name="ErrorLbl2" 
            Content="Default Error" 
            Grid.Column="1" 
            Grid.Row="1" 
            VerticalAlignment="Bottom" 
            Margin="10, 0, 10, 20"
            FontSize="16"
            HorizontalContentAlignment="Center" 
            Visibility="Hidden">
        </Label>
    </Grid>
</Page>
